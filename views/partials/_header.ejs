<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
              <!-- Logged in: Show logout and email -->
        <form class="form-inline ml-auto" action="/logout" method="POST">
          <label class="text-white mr-2">Logged in as: <%= user.email%></label>
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
      <% } else { %>
           <!-- Not logged in: Show login link -->
        <div class="ml-auto d-flex align-items-center">
        <a class="nav-link text-white" href="/register">Register</a>
        <a class="nav-link text-white" href="/login">Login</a>
      </div>
       <% } %>
    </div>
  </nav>
</header>